<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextViewTitle">
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/title_green</item>
    </style>

    <style name="TextViewPrev">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:visibility">visible</item>
    </style>

    <style name="EditTextInput">
        <item name="android:ems">15</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>

    <style name="ButtonText">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/btn_green</item>
    </style>
    
    <style name="TextViewContent">
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_green</item>
    </style>


